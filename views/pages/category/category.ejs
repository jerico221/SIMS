<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-l-6 col-md-4 col-sm-3">
        <div class="input-group mb-3">
          <input
            id="category"
            name="category"
            type="text"
            class="form-control"
            placeholder="Category Name"
            aria-label="Category Name"
            aria-describedby="addBtn"
          />
          <button
            class="custom-btn cw-7rem clr-success shadow-sm"
            type="button"
            id="addBtn"
          >
            Add
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<hr class="border border-2 opacity-50" />

<div class="table-responsive">
  <table id="datatable" class="table table-hover table-bordered">
    <thead>
      <th class="bg-secondary text-white">ID</th>
      <th class="bg-secondary text-white">Category Name</th>
      <th class="bg-secondary text-white">Status</th>
      <th class="bg-secondary text-white">Action</th>
    </thead>
    <tbody></tbody>
  </table>
</div>

<!-- Modal -->
<div
  class="modal fade bd-example-modal-lg"
  id="editModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
  data-keyboard="false"
  data-backdrop="static"
>
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Category</h5>
      </div>
      <div class="modal-body">
        <div class="row mb-2">
          <div class="col-lg-12">
            <div class="card-body">
              <div class="row mb-2">
                <div class="col-md-12">
                  <label class="form-label" for="idmodal">Category ID</label>
                  <input
                    autocomplete="off"
                    id="idmodal"
                    name="idmodal"
                    type="text"
                    class="form-control"
                    aria-label="fullname"
                    aria-describedby="basic-addon1"
                    disabled
                  />
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <label class="form-label" for="categorymodal"
                    >Category Name</label
                  >
                  <input
                    autocomplete="off"
                    id="categorymodal"
                    name="categorymodal"
                    type="text"
                    class="form-control"
                    placeholder="Enter new category"
                    aria-label="fullname"
                    aria-describedby="basic-addon1"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="custom-btn cw-7rem clr-warning shadow-sm"
          data-dismiss="modal"
        >
          <i class="fa fa-times" aria-hidden="true"></i> Close
        </button>
        <button
          type="button"
          id="saveBtn"
          class="custom-btn cw-7rem clr-success shadow-sm"
        >
          <i class="fa fa-check" aria-hidden="true"></i> Save
        </button>
      </div>
    </div>
  </div>
</div>
