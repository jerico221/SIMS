<div class="container-fluid">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">Customer Order History</h3>
    </div>

    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <input
            type="text"
            class="form-control"
            id="search"
            placeholder="Search"
          />
        </div>
      </div>
      <div class="row mt-2 table-responsive">
        <table id="datatable" class="table table-bordered table-hover">
          <thead class="thead-dark">
            <th>ID</th>
            <th>Date</th>
            <th>Details</th>
            <th>Payment Method</th>
            <th>Status</th>
          </thead>
          <tbody></tbody>
        </table>
      </div>
    </div>
  </div>
</div>
