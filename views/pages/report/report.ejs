<div class="card">
  <div class="card-header">
    <h6 class="card-title">Report</h6>
    <div class="row mb-2 mt-2">
      <div class="col-md-6">
        <div class="input-group shadow">
          <button
            id="adjustDateBackward"
            class="btn btn-outline-inventory custom-br-left"
          >
            <i class="fas fa-caret-left"></i>
          </button>
          <input
            id="dateRange"
            name="dateRange"
            type="text"
            class="form-control text-center daterange"
            placeholder="Select Date Range"
            aria-describedby="basic-addon1"
            readonly
          />
          <button
            id="adjustDateForward"
            class="btn btn-outline-inventory custom-br-right"
          >
            <i class="fas fa-caret-right"></i>
          </button>
        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="card shadow scroll-cardbody-size-710">
        <div class="card-body sales-details-height">
          <div class="row justify-content-center">
            <div class="col">
              <span class="h5"> Sales Graph </span>
            </div>
          </div>
          <div id="sales-graph-loader"></div>

          <div class="row" style="height: 480px">
            <canvas class="py-2" id="gross-sales-chart"></canvas>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
