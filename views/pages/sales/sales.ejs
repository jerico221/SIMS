<div class="container-fluid">
  <div class="row">
    <div class="col-xl-9">
      <div class="card shadow mb-4 cardbody-size-710">
        <div class="progress progress-sm mb-2">
          <div
            class="progress-bar"
            role="progressbar"
            style="width: 0%"
            aria-valuenow="0"
            aria-valuemin="0"
            aria-valuemax="100"
          ></div>
        </div>
        <div class="card-header py-3 header-bg">
          <div class="row">
            <div class="col-md-5">
              <div class="row">
                <h6 class="mt-2 ml-3 font-weight-bold h4 label-title">Sales</h6>
              </div>
            </div>
            <div class="col-md-6">
              <div class="input-group">
                <input
                  autocomplete="off"
                  type="text"
                  class="form-control bg-light small"
                  placeholder="Search for..."
                  aria-label="Search"
                  aria-describedby="basic-addon2"
                  id="search-input"
                />
                <div class="input-group-append">
                  <button
                    class="btn sis-btn-color"
                    type="button"
                    id="search-button"
                  >
                    <i class="fas fa-search fa-sm"></i>
                  </button>
                </div>
              </div>
            </div>
            <div class="col-1">
              <div class="row d-flex justify-content-center">
                <button class="btn btn-outline-inventory ml-2" id="convertopdf">
                  <i class="fas fa-download fa-sm"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
        <div class="card-body">
          <div class="table-responsive scroll-cardbody-size-710 border">
            <table
              id="datatable"
              class="table table-bordered custom-mobile-table"
              width="100%"
              cellspacing="10"
            >
              <thead class="table-header">
                <tr>
                  <th>ID</th>
                  <th>Date</th>
                  <th>POS</th>
                  <th>Total</th>
                  <th>Status</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody></tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3">
      <div class="card shadow cardbody-size-710">
        <div class="card-header header-bg">
          <div class="row">
            <div class="col">
              <h6 class="m-0 font-weight-bold mt-2 label-title h4">
                Filter Sales
              </h6>
            </div>
          </div>
        </div>
        <div class="card-body extend">
          <div class="row">
            <div class="col">
              <div class="input-group mb-3">
                <input
                  autocomplete="off"
                  id="transactionid"
                  name="transactionid"
                  type="text"
                  class="form-control"
                  placeholder="Enter Transaction ID"
                  aria-label="Enter Transaction ID"
                />
                <div class="input-group-append">
                  <span class="input-group-text">Transaction ID</span>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <div class="input-group mb-3">
                <input
                  autocomplete="off"
                  id="posid"
                  name="posid"
                  type="text"
                  class="form-control"
                  placeholder="Enter POS ID"
                  aria-label="Enter POS ID"
                />
                <div class="input-group-append">
                  <span class="input-group-text">POS ID</span>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <div class="input-group mb-3">
                <input
                  autocomplete="off"
                  id="date"
                  name="date"
                  type="text"
                  class="form-control"
                  placeholder="Select Date"
                  aria-label="Select Date"
                />
                <div class="input-group-append">
                  <span class="input-group-text">Date</span>
                </div>
              </div>
            </div>
          </div>

          <div class="row justify-content-center mt-2">
            <button
              class="btn btn-sm btn-outline-inventory w-75"
              type="button"
              id="filterBtn"
            >
              Filter
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal -->
  <div
    class="modal fade"
    id="editModal"
    tabindex="-1"
    role="dialog"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header custom-bg">
          <h5 class="modal-title" id="exampleModalLabel">Sales Details</h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="custom-modal-body">
          <div class="card">
            <div class="card-header py-2 header-bg">
              <h6 class="m-0 font-weight-bold table-title">Sales</h6>

              <div class="row">
                <div class="col-md-6">
                  <div class="input-group mb-3">
                    <input
                      autocomplete="off"
                      id="transactionidmodal"
                      name="transactionidmodal"
                      type="text"
                      class="form-control"
                      placeholder="Enter Transaction ID"
                      aria-label="Enter Transaction ID"
                      disabled
                    />
                    <div class="input-group-append">
                      <span class="input-group-text">Transaction ID</span>
                    </div>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="input-group mb-3">
                    <input
                      autocomplete="off"
                      id="transactiondate"
                      name="transactiondate"
                      type="text"
                      class="form-control"
                      placeholder="Enter Transaction ID"
                      aria-label="Enter Transaction ID"
                      disabled
                    />
                    <div class="input-group-append">
                      <span class="input-group-text">Date</span>
                    </div>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6">
                  <div class="input-group mb-3">
                    <input
                      autocomplete="off"
                      id="transactionposid"
                      name="transactionposid"
                      type="text"
                      class="form-control"
                      placeholder="Enter Transaction ID"
                      aria-label="Enter Transaction ID"
                      disabled
                    />
                    <div class="input-group-append">
                      <span class="input-group-text">POS ID</span>
                    </div>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="input-group mb-3">
                    <input
                      autocomplete="off"
                      id="transactionstatus"
                      name="transactionstatus"
                      type="text"
                      class="form-control"
                      placeholder="Enter Transaction ID"
                      aria-label="Enter Transaction ID"
                      disabled
                    />
                    <div class="input-group-append">
                      <span class="input-group-text">Status</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="table-responsive scroll-cardbody-size-710 border">
                <table
                  id="datatablemodal"
                  class="table table-bordered custom-mobile-table"
                  width="100%"
                  cellspacing="10"
                >
                  <thead class="table-header">
                    <tr>
                      <th>ID</th>
                      <th>Name</th>
                      <th>Price</th>
                      <th>Quantity</th>
                    </tr>
                  </thead>
                  <tbody></tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <button
            type="button"
            id="closeBtn"
            class="btn btn-outline-inventory"
            data-dismiss="modal"
          >
            Close
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
