<script>
  $(document).ready(function () {
    let id = "";
    let status = "";
    let date = "";
    let posid = "";
    let total = "";
    LoadTable();

    $("#datatable tbody").on("click", "tr", function () {
      var dataRow = [];
      $(this)
        .closest("tr")
        .find("td")
        .each(function () {
          dataRow.push($(this).text());
        });
      console.log(dataRow);
      id = dataRow[0];
      date = dataRow[1];
      posid = dataRow[2];
      total = dataRow[3];
      status = dataRow[4];
    });

    $(document).on("click", "#viewDetailBtn", function () {
      console.log("click");

      $("#editModal").modal("show");

      $("#transactionidmodal").val(id);
      $("#transactiondate").val(date);
      $("#transactionposid").val(posid);
      $("#transactionstatus").val(status);
      $("#totalprice").html(total);

      Fetch(`/sales/getdetails/${id}`, (result) => {
        if (result.msg === "success") {
          console.log(result.data);
          const tableBody = $("#datatablemodal tbody");
          tableBody.empty();

          let data = result.data["items"];
          let detail = result.data["detail"];

          detail.forEach((item) => {
            $("#paymenttype").val(item.paymenttype);
            $("#cashier").val(item.cashier);
            $("#amounttender").val(formatCurrency(item.cashreceive));
            $("#change").val(formatCurrency(item.change));
          });

          if (data === 0) {
            const tr = $("<tr>").append(
              $("<td>", {
                colspan: 4,
                class: "text-center",
                text: "No Data Matched",
              })
            );
            tableBody.append(tr);
          } else {
            data.forEach((item) => {
              const tr = $("<tr>").append(
                $("<td>", {
                  text: item.id,
                  "data-label": "ID",
                  class: "custom-mobile-align",
                }),
                $("<td>", {
                  text: item.name,
                  "data-label": "Name",
                  class: "custom-mobile-align",
                }),
                $("<td>", {
                  text: formatCurrency(item.price),
                  "data-label": "Price",
                  class: "custom-mobile-align",
                }),
                $("<td>", {
                  text: item.quantity,
                  "data-label": "Quantity",
                  class: "custom-mobile-align",
                })
              );

              tableBody.append(tr);
            });
          }
        } else {
          console.error(result.msg);
        }
      });
    });

    function LoadTable() {
      $.ajax({
        url: "/sales/load",
        method: "GET",
        dataType: "json",
        success: function (data) {
          console.log(data);
          if (data.msg === "success") {
            populatedatatable(data.data);
          } else {
            console.error(data.msg);
          }
        },
        error: function (error) {
          console.error(error);
        },
      });
    }

    function populatedatatable(data) {
      console.log(data);
      const tableBody = $("#datatable tbody");
      tableBody.empty();

      if (data.length === 0) {
        const tr = $("<tr>").append(
          $("<td>", {
            colspan: 6,
            class: "text-center",
            text: "No Data Matched",
          })
        );
        tableBody.append(tr);
      } else {
        data.forEach((item) => {
          let action = "";
          if (item.status === "SOLD") {
            action = `<span class="editbutton" name="viewDetailBtn" id="viewDetailBtn"><i class="fas fa-eye" style="color: rgb(99, 115, 129);"></i></span>`;
          }
          const statusBackground = getStatusBackground(item.status);
          const containerBackground = getContainerBackground(item.status);

          const tr = $("<tr>").append(
            $("<td>", {
              text: item.id,
              "data-label": "ID",
              class: "custom-mobile-align",
            }),
            $("<td>", {
              text: item.date,
              "data-label": "Date",
              class: "custom-mobile-align",
            }),
            $("<td>", {
              text: item.pos,
              "data-label": "POS",
              class: "custom-mobile-align",
            }),
            $("<td>", {
              text: formatCurrency(item.total),
              "data-label": "Total",
              class: "custom-mobile-align",
            }),
            $("<td>", {
              class: "custom-mobile-align",
              "data-label": "Status",
            }).append(
              $("<div>", { class: containerBackground }).append(
                $("<span>", { text: item.status, class: statusBackground })
              )
            ),
            $("<td>", {
              html: action,
              "data-label": "Action",
              class: "actionWidth",
            })
          );

          tableBody.append(tr);
        });
      }
    }
  });
</script>
